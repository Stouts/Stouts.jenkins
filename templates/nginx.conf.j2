{% if jenkins_proxy_ssl_redirect -%}
# Redirect HTTP to SSL
server {
    listen 80;
    server_name {{jenkins_proxy_hostname}};
    rewrite ^(.*) https://$host$1 permanent;
}
{% endif %}

server {
    listen            {{jenkins_proxy_port}};
{% if jenkins_proxy_hostname %}
    server_name       {{jenkins_proxy_hostname}};
{% endif %}
    client_max_body_size 8m;
    ignore_invalid_headers off;

{% if jenkins_proxy_ssl %}
    ssl on;
    ssl_certificate {{ jenkins_proxy_ssl_certificate }};
    ssl_certificate_key {{ jenkins_proxy_ssl_key }};
{% endif %}

    location / {
        proxy_pass http://127.0.0.1:{{jenkins_http_port}};
{% if jenkins_proxy_hostname %}
        proxy_redirect http://127.0.0.1:{{jenkins_http_port}} $scheme://{{jenkins_proxy_hostname}};
{% endif %}
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header Host $http_host;

        {% if jenkins_proxy_auth %}
        auth_basic "Restricted";
        auth_basic_user_file {{jenkins_home}}/.htpasswd;
        {% endif %}
    }

{% if jenkins_serve_builds_url_path %}
    location {{ jenkins_serve_builds_url_path }} {
        alias {{ jenkins_serve_builds_dir  }};
        autoindex on;
    }

{% endif %}
    error_log         {{jenkins_logdir}}/nginx-error.log;
    access_log        {{jenkins_logdir}}/nginx-access.log;

}
